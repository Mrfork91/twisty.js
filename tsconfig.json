{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "umd",
    "target": "es2015",

    "outDir": "build",
    "declaration": true,
    "sourceMap": true,

    "alwaysStrict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "strictNullChecks": true
  },
  "include": [
    "*.ts"
  ],
  "exclude": [
    "build"
  ]
}
